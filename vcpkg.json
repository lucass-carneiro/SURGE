{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "surge",
  "version": "1.0.0",
  "dependencies": [
    {
      "name": "mimalloc",
      "features": [
        "override"
      ],
      "platform": "windows"
    },
    {
      "name": "mimalloc",
      "platform": "!windows"
    },
    "gsl-lite",
    "tl-expected",
    "fmt",
    "taskflow",
    "xxhash",
    "stb",
    "openexr",
    "ryml",
    {
      "name": "freetype",
      "features": [
        "error-strings"
      ]
    },
    "glfw3",
    "glm",
    {
      "name": "glad",
      "features": [
        "loader",
        "extensions"
      ]
    },
    "opengl",
    "vulkan",
    "vulkan-validationlayers",
    {
      "name": "imgui",
      "features": [
        "glfw-binding",
        "opengl3-binding",
        "vulkan-binding"
      ]
    },
    "vulkan-memory-allocator"
  ]
}
